<section class="ios-section" aria-label="Vorteile">
  <div class="ios-wrap">
    {% render 'ios-section-header', title: section.settings.title, subtitle: section.settings.subtitle %}

    <div class="ios-grid3">
      {% for block in section.blocks %}
        {% capture icon_badge %}
          {% case block.settings.icon %}
            {% when 'bolt' %}‚ö°
            {% when 'chat' %}üí¨
            {% when 'creditcard' %}üí≥
            {% when 'sparkles' %}‚ú®
            {% else %}‚óè
          {% endcase %}
        {% endcapture %}
        {% render 'ios-card', title: block.settings.title, text: block.settings.text, badge: icon_badge, attributes: block.shopify_attributes %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "iOS Features",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Why it works" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Weniger Stress, schneller Launch." }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Blitzstart" },
        { "type": "textarea", "id": "text", "label": "Text", "default": "Du bekommst die Basis f√ºr Brand und Shop, um Nachfrage ohne Wochen Vorarbeit zu testen." },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "bolt", "label": "Bolt" },
            { "value": "chat", "label": "Chat" },
            { "value": "creditcard", "label": "Credit Card" },
            { "value": "sparkles", "label": "Sparkles" }
          ],
          "default": "bolt"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{ "name": "iOS Features" }]
}
{% endschema %}

