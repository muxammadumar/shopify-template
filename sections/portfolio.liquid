<section class="portfolio-section" id="portfolio">
  <div class="portfolio-container">
    <div class="portfolio-header">
      <h2 class="portfolio-title">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="portfolio-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="portfolio-grid">
      {% for i in (1..3) %}
        <div class="portfolio-item">
          <div class="portfolio-video-wrapper">
            <video
              class="portfolio-video"
              src="{{ 'brand-' | append: i | append: '.MP4' | asset_url }}"
              controls
              playsinline
              preload="metadata"
              aria-label="Brand showcase {{ i }}">
            </video>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .portfolio-section {
    padding: 80px 20px;
    background: #fff;
  }

  .portfolio-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .portfolio-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .portfolio-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: #000;
  }

  .portfolio-subtitle {
    font-size: 1.125rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .portfolio-item {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .portfolio-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .portfolio-video-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    background: #000;
  }

  .portfolio-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .portfolio-section {
      padding: 60px 16px;
    }

    .portfolio-title {
      font-size: 2rem;
    }

    .portfolio-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }
</style>

{% schema %}
{
  "name": "Portfolio",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Brands we have built"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "See the success stories of brands we've helped create and grow."
    }
  ],
  "presets": [
    {
      "name": "Portfolio"
    }
  ]
}
{% endschema %}
