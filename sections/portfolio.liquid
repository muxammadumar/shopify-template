<section id="portfolio" class="ios-section" aria-label="{{ section.settings.title }}">
  <div class="ios-wrap">
    {% render 'ios-section-header', title: section.settings.title, subtitle: section.settings.subtitle %}

    <div class="ios-brands-grid">
      <div class="ios-glass ios-brand-card">
        <video
          class="ios-brand-video"
          src="{{ 'brand-1.MP4' | asset_url }}"
          controls
          playsinline
          aria-label="Brand showcase 1">
        </video>
      </div>

      <div class="ios-glass ios-brand-card">
        <video
          class="ios-brand-video"
          src="{{ 'brand-2.MP4' | asset_url }}"
          controls
          playsinline
          aria-label="Brand showcase 2">
        </video>
      </div>

      <div class="ios-glass ios-brand-card">
        <video
          class="ios-brand-video"
          src="{{ 'brand-3.MP4' | asset_url }}"
          controls
          playsinline
          aria-label="Brand showcase 3">
        </video>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Portfolio",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Brands we have built"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "See the success stories of brands we've helped create and grow."
    }
  ],
  "presets": [
    {
      "name": "Portfolio"
    }
  ]
}
{% endschema %}
