{% comment %}
  Cart Section - Displays shopping cart items with glassmorphism design
{% endcomment %}

<section class="ios-section ios-cart" aria-label="{{ 'cart.title' | t }}">
  <div class="ios-wrap">
    <div class="ios-contact-back">
      <a href="/" class="ios-btn ghost">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 8px;">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        {{ 'general.back_to_home' | t | default: 'Back to Home' }}
      </a>
    </div>

    {% if cart.item_count > 0 %}
      <div class="ios-cart-header">
        <h1 class="ios-h1">{{ 'cart.title' | t }}</h1>
        <p class="ios-sub">{{ 'cart.item_count' | t: count: cart.item_count }}</p>
      </div>

      <form action="/cart" method="post" novalidate class="ios-cart-form" id="cart-form">
        <div class="ios-cart-items">
          {% for item in cart.items %}
            <div class="ios-cart-item" data-cart-item-key="{{ item.key }}">
              <div class="ios-cart-item-image">
                {% if item.image %}
                  <img src="{{ item.image | img_url: '200x200' }}" 
                       alt="{{ item.title | escape }}"
                       loading="lazy">
                {% else %}
                  <div class="ios-cart-item-placeholder">
                    <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    </svg>
                  </div>
                {% endif %}
              </div>

              <div class="ios-cart-item-details">
                <h3 class="ios-cart-item-title">
                  <a href="{{ item.url }}">{{ item.product.title }}</a>
                </h3>
                {% unless item.product.has_only_default_variant %}
                  <p class="ios-cart-item-variant">{{ item.variant.title }}</p>
                {% endunless %}
                
                {% if item.product.description != blank %}
                  <div class="ios-cart-item-description">
                    <p>{{ item.product.description | strip_html | truncate: 120 }}</p>
                  </div>
                {% endif %}
                
                {% if item.product.metafields.custom.features != blank %}
                  <div class="ios-cart-item-features">
                    <ul>
                      {% assign features = item.product.metafields.custom.features | split: ',' %}
                      {% for feature in features limit: 3 %}
                        <li>{{ feature | strip }}</li>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}
                
                <div class="ios-cart-item-country">
                  <label class="ios-cart-country-label">{{ 'cart.store_language' | t | default: 'Store language' }}:</label>
                  <select class="ios-cart-country-select" data-item-key="{{ item.key }}">
                    <option value="US" {% if item.properties['_country'] == 'US' or item.properties['_country'] == blank %}selected{% endif %}>ðŸ‡ºðŸ‡¸ United States</option>
                    <option value="DE" {% if item.properties['_country'] == 'DE' %}selected{% endif %}>ðŸ‡©ðŸ‡ª Deutschland</option>
                    <option value="GB" {% if item.properties['_country'] == 'GB' %}selected{% endif %}>ðŸ‡¬ðŸ‡§ United Kingdom</option>
                    <option value="CA" {% if item.properties['_country'] == 'CA' %}selected{% endif %}>ðŸ‡¨ðŸ‡¦ Canada</option>
                    <option value="AU" {% if item.properties['_country'] == 'AU' %}selected{% endif %}>ðŸ‡¦ðŸ‡º Australia</option>
                    <option value="FR" {% if item.properties['_country'] == 'FR' %}selected{% endif %}>ðŸ‡«ðŸ‡· France</option>
                    <option value="IT" {% if item.properties['_country'] == 'IT' %}selected{% endif %}>ðŸ‡®ðŸ‡¹ Italia</option>
                    <option value="ES" {% if item.properties['_country'] == 'ES' %}selected{% endif %}>ðŸ‡ªðŸ‡¸ EspaÃ±a</option>
                    <option value="NL" {% if item.properties['_country'] == 'NL' %}selected{% endif %}>ðŸ‡³ðŸ‡± Nederland</option>
                    <option value="CH" {% if item.properties['_country'] == 'CH' %}selected{% endif %}>ðŸ‡¨ðŸ‡­ Schweiz</option>
                  </select>
                </div>

                <div class="ios-cart-item-niche">
                  <label class="ios-cart-country-label">{{ 'cart.brand_niche' | t | default: 'Brand Niche' }}:</label>
                  <select class="ios-cart-niche-select" data-item-key="{{ item.key }}">
                    <option value="" {% if item.properties['_niche'] == blank %}selected{% endif %}>Choose a niche...</option>
                    <option value="fashion" {% if item.properties['_niche'] == 'fashion' %}selected{% endif %}>1. Fashion & Accessories</option>
                    <option value="fitness" {% if item.properties['_niche'] == 'fitness' %}selected{% endif %}>2. Fitness & Health</option>
                    <option value="beauty" {% if item.properties['_niche'] == 'beauty' %}selected{% endif %}>3. Beauty & Skincare</option>
                    <option value="home" {% if item.properties['_niche'] == 'home' %}selected{% endif %}>4. Home & Living</option>
                    <option value="kitchen" {% if item.properties['_niche'] == 'kitchen' %}selected{% endif %}>5. Kitchen & Cooking</option>
                    <option value="pets" {% if item.properties['_niche'] == 'pets' %}selected{% endif %}>6. Pets</option>
                    <option value="electronics" {% if item.properties['_niche'] == 'electronics' %}selected{% endif %}>7. Electronics & Gadgets</option>
                    <option value="car" {% if item.properties['_niche'] == 'car' %}selected{% endif %}>8. Car Accessories</option>
                    <option value="baby" {% if item.properties['_niche'] == 'baby' %}selected{% endif %}>9. Baby & Kids</option>
                    <option value="recommended" {% if item.properties['_niche'] == 'recommended' %}selected{% endif %}>10. Our Recommended Niche</option>
                  </select>
                </div>
                
                <div class="ios-cart-item-price">
                  <span class="ios-price">{{ item.final_price | money }}</span>
                  {% if item.original_price != item.final_price %}
                    <span class="ios-was">{{ item.original_price | money }}</span>
                  {% endif %}
                </div>
              </div>

              <div class="ios-cart-item-quantity">
                <label for="quantity-{{ item.key }}" class="ios-visually-hidden">{{ 'cart.quantity' | t }}</label>
                <div class="ios-quantity-controls">
                  <button type="button" 
                          class="ios-quantity-btn" 
                          data-action="decrease" 
                          data-item-key="{{ item.key }}"
                          aria-label="{{ 'cart.decrease_quantity' | t }}">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                  </button>
                  <input type="number" 
                         id="quantity-{{ item.key }}"
                         name="updates[]" 
                         value="{{ item.quantity }}" 
                         min="0"
                         data-item-key="{{ item.key }}"
                         class="ios-quantity-input"
                         aria-label="{{ 'cart.quantity_for' | t: title: item.product.title }}">
                  <button type="button" 
                          class="ios-quantity-btn" 
                          data-action="increase" 
                          data-item-key="{{ item.key }}"
                          aria-label="{{ 'cart.increase_quantity' | t }}">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="12" y1="5" x2="12" y2="19"></line>
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                  </button>
                </div>
              </div>

              <div class="ios-cart-item-total">
                <span class="ios-price">{{ item.final_line_price | money }}</span>
              </div>

              <div class="ios-cart-item-remove">
                <button type="button" 
                        class="ios-remove-btn" 
                        data-action="remove" 
                        data-item-key="{{ item.key }}"
                        aria-label="{{ 'cart.remove_item' | t: title: item.product.title }}">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                  </svg>
                </button>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="ios-cart-footer">
          <div class="ios-glass ios-cart-summary">
            <div class="ios-cart-summary-row">
              <span>{{ 'cart.subtotal' | t }}</span>
              <strong class="ios-price">{{ cart.total_price | money }}</strong>
            </div>
            {% if cart.cart_level_discount_applications.size > 0 %}
              {% for discount in cart.cart_level_discount_applications %}
                <div class="ios-cart-summary-row discount">
                  <span>{{ 'cart.discount' | t }}: {{ discount.title }}</span>
                  <strong>-{{ discount.total_allocated_amount | money }}</strong>
                </div>
              {% endfor %}
            {% endif %}
            <div class="ios-cart-summary-row total">
              <span>{{ 'cart.total' | t }}</span>
              <strong class="ios-price">{{ cart.total_price | money }}</strong>
            </div>
          </div>

          <div class="ios-cart-actions">
            <button type="submit" name="update" class="ios-btn ghost" style="display: none;" id="cart-update-btn">
              {{ 'cart.update' | t }}
            </button>
            <button type="submit" name="checkout" class="ios-btn primary ios-btn-large" id="checkout-btn">
              {{ 'cart.checkout' | t }}
            </button>
          </div>
        </div>
      </form>
    {% else %}
      <div class="ios-cart-empty">
        <div class="ios-glass ios-padding-card">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="opacity: 0.5; margin-bottom: 20px;">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          <h2 class="ios-h2">{{ 'cart.empty_title' | t }}</h2>
          <p class="ios-sub">{{ 'cart.empty_message' | t }}</p>
          <a href="/" class="ios-btn primary">{{ 'cart.continue_shopping' | t }}</a>
        </div>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "iOS Cart",
  "settings": [],
  "presets": [
    {
      "name": "iOS Cart"
    }
  ]
}
{% endschema %}
