<section class="ios-section ios-landing-video" aria-label="Video">
  <div class="ios-wrap">
    <div class="ios-video-wrap">
      <video
        class="ios-landing-video-player"
        src="{{ 'landing-video.MP4' | asset_url }}"
        autoplay
        loop
        playsinline
        aria-label="Landing video">
      </video>
    </div>
  </div>
</section>

<script>
(function() {
  var video = document.querySelector('.ios-landing-video-player');
  if (!video) return;
  function enableSound() {
    video.muted = false;
    video.play().catch(function() {});
  }
  document.addEventListener('click', enableSound, { once: true });
  document.addEventListener('touchstart', enableSound, { once: true });
  document.addEventListener('keydown', enableSound, { once: true });
})();
</script>

