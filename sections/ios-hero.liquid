    <div class="ios-hero-grid">
      <div>
        <div class="ios-kicker"><span class="ios-dot" aria-hidden="true"></span> {{ section.settings.kicker }}</div>
        <h1 class="ios-h1">{{ section.settings.heading }}</h1>
        <p class="ios-lead">{{ section.settings.subheading }}</p>

        <div style="display:flex; gap:10px; flex-wrap:wrap; margin-top: 10px">
          <a class="ios-btn primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
          <a class="ios-btn ghost" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
