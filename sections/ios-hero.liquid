{% comment %}
  iOS Hero + Sticky header with anchor nav
{% endcomment %}

<div class="ios-topbar">
  <div class="ios-wrap">
    <div class="ios-topbar-inner">
      <a class="ios-brand" href="#top" aria-label="{{ section.settings.brand | default: shop.name | escape }}">
        <div class="ios-mark" aria-hidden="true"></div>
        <div>
          <strong>{{ section.settings.brand | default: shop.name }}</strong>
          <span>{{ section.settings.tagline | default: '' }}</span>
        </div>
      </a>

      {% render 'ios-navigation' %}

      <div class="ios-actions">
        {% render 'ios-language-selector' %}
              <div class="ios-actions">
        {% render 'ios-language-selector' %}
        
        {% comment %} DEBUG: Remove this after checking {% endcomment %}
        <div style="background: yellow; padding: 10px; color: black; font-size: 12px;">
          Locales: {{ shop.published_locales.size }} | 
          Current: {{ request.locale.iso_code }}
        </div>
        {% comment %} END DEBUG {% endcomment %}
        
        <button class="ios-burger" id="iosBurger" ...
        <button class="ios-burger" id="iosBurger" aria-label="{{ 'general.menu' | t }}" aria-controls="iosMobileNav" aria-expanded="false" data-menu-open="{{ 'general.menu_open' | t }}" data-menu-close="{{ 'general.menu_close' | t }}">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
            <path d="M4 7h16M4 12h16M4 17h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
        <a class="ios-btn ghost" href="#pricing">{{ 'general.view_packages' | t }}</a>
        <a class="ios-btn primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
      </div>
    </div>
  </div>
</div>

<section id="top" class="ios-hero">
  <div class="ios-wrap">
    <div class="ios-hero-grid">
      <div>
        {% if section.settings.kicker != blank %}
        <div class="ios-kicker"><span class="ios-dot" aria-hidden="true"></span> {{ section.settings.kicker }}</div>
        {% endif %}
        <h1 class="ios-h1">{{ section.settings.heading | default: shop.name }}</h1>
        {% if section.settings.subheading != blank %}
        <p class="ios-lead">{{ section.settings.subheading }}</p>
        {% endif %}

        {% if section.settings.primary_label != blank or section.settings.secondary_label != blank %}
        <div class="ios-flex-gap ios-margin-top-sm">
          {% if section.settings.primary_label != blank %}
          <a class="ios-btn primary" href="{{ section.settings.primary_link | default: '#' }}">{{ section.settings.primary_label }}</a>
          {% endif %}
          {% if section.settings.secondary_label != blank %}
          <a class="ios-btn ghost" href="{{ section.settings.secondary_link | default: '#' }}">{{ section.settings.secondary_label }}</a>
          {% endif %}
        </div>
        {% endif %}

        {% if section.settings.chip_1 != blank or section.settings.chip_2 != blank or section.settings.chip_3 != blank %}
        <div class="ios-chips" aria-label="{{ 'hero.important_benefits' | t }}">
          {% if section.settings.chip_1 != blank %}
          <div class="ios-chip">‚è±Ô∏è <b>{{ section.settings.chip_1 }}</b></div>
          {% endif %}
          {% if section.settings.chip_2 != blank %}
          <div class="ios-chip">ü§ù <b>{{ section.settings.chip_2 }}</b></div>
          {% endif %}
          {% if section.settings.chip_3 != blank %}
          <div class="ios-chip">üí≥ <b>{{ section.settings.chip_3 }}</b></div>
          {% endif %}
        </div>
        {% endif %}

        {% if section.settings.show_country_selector != false %}
        <div style="margin-top: 18px;">
          {% render 'ios-country-selector' %}
        </div>
        {% endif %}
      </div>

      <aside class="ios-glass ios-side" aria-label="{{ 'hero.short_and_clear' | t }}">
        <div class="ios-ring" aria-hidden="true"></div>
        <h3>{{ 'hero.short_and_clear' | t }}</h3>

        <div class="ios-stat">
          <div class="ios-stat-row"><span>{{ 'hero.duration' | t }}</span><strong>{{ 'hero.duration_value' | t }}</strong></div>
          <div class="ios-stat-row"><span>{{ 'hero.basis' | t }}</span><strong>{{ 'hero.basis_value' | t }}</strong></div>
          <div class="ios-stat-row"><span>{{ 'hero.format' | t }}</span><strong>{{ 'hero.format_value' | t }}</strong></div>
        </div>

        <div class="ios-tag">{{ 'hero.ios_style' | t }}</div>
      </aside>
    </div>
  </div>
</section>

