{% comment %}
  iOS Hero + Sticky header with anchor nav
{% endcomment %}

<div class="ios-topbar">
  <div class="ios-wrap">
    <div class="ios-topbar-inner">
      <a class="ios-brand" href="#top" aria-label="{% if section.settings.brand != blank %}{{ section.settings.brand | escape }}{% else %}{{ 'hero.brand' | t | default: shop.name | escape }}{% endif %}">
        <img src="{{ 'logo.png' | asset_url }}" alt="{% if section.settings.brand != blank %}{{ section.settings.brand | escape }}{% else %}{{ 'hero.brand' | t | default: shop.name | escape }}{% endif %}" class="ios-mark">
      </a>

      {% render 'ios-navigation' %}

      <div class="ios-actions">
        <button class="ios-burger" id="iosBurger" aria-label="{{ 'general.menu' | t }}" aria-controls="iosMobileNav" aria-expanded="false" data-menu-open="{{ 'general.menu_open' | t }}" data-menu-close="{{ 'general.menu_close' | t }}">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
            <path d="M4 7h16M4 12h16M4 17h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
        <a class="ios-btn ghost" href="#pricing">{{ 'general.view_packages' | t }}</a>
        <a class="ios-btn primary" href="{{ section.settings.primary_link }}">{% if section.settings.primary_label != blank %}{{ section.settings.primary_label }}{% else %}{{ 'hero.primary_label' | t }}{% endif %}</a>
      </div>
    </div>
  </div>
</div>

<div class="ios-mobile" id="iosMobileNav">
  <div class="ios-wrap">
    {% if settings.nav_item_2_label != blank %}
    <a href="{{ settings.nav_item_2_link | default: '#' }}">{{ settings.nav_item_2_label }}</a>
    {% endif %}
    {% if settings.nav_item_3_label != blank %}
    <a href="{{ settings.nav_item_3_link | default: '#' }}">{{ settings.nav_item_3_label }}</a>
    {% endif %}
    {% if settings.nav_item_4_label != blank %}
    <a href="{{ settings.nav_item_4_link | default: '#' }}">{{ settings.nav_item_4_label }}</a>
    {% endif %}
    {% if settings.nav_item_5_label != blank %}
    <a href="{{ settings.nav_item_5_link | default: '#' }}">{{ settings.nav_item_5_label }}</a>
    {% endif %}
    {% if settings.nav_item_6_label != blank %}
    <a href="{{ settings.nav_item_6_link | default: '#' }}">{{ settings.nav_item_6_label }}</a>
    {% endif %}
    <a href="/pages/contact">{{ 'general.support' | t | default: 'Support' }}</a>
    <a href="/pages/privacy-policy">{{ 'general.policies' | t | default: 'Policies' }}</a>
    <a href="/cart" class="ios-mobile-cart-link">
      {{ 'cart.view_cart' | t }}
      {% if cart.item_count > 0 %}
        <span class="ios-cart-count">({{ cart.item_count }})</span>
      {% endif %}
    </a>
  </div>
</div>

<section id="top" class="ios-hero">
  <div class="ios-wrap">
    <div class="ios-hero-grid">
      <div>
        {% assign kicker_translated = 'hero.kicker' | t %}
        {% if section.settings.kicker != blank %}
        <div class="ios-kicker"><span class="ios-dot" aria-hidden="true"></span> {{ section.settings.kicker }}</div>
        {% elsif kicker_translated != blank and kicker_translated != 'hero.kicker' %}
        <div class="ios-kicker"><span class="ios-dot" aria-hidden="true"></span> {{ kicker_translated }}</div>
        {% endif %}
        <h1 class="ios-h1">{% if section.settings.heading != blank %}{{ section.settings.heading }}{% else %}{{ 'hero.heading' | t | default: shop.name }}{% endif %}</h1>
        {% assign subheading_translated = 'hero.subheading' | t %}
        {% if section.settings.subheading != blank %}
        <p class="ios-lead">{{ section.settings.subheading }}</p>
        {% elsif subheading_translated != blank and subheading_translated != 'hero.subheading' %}
        <p class="ios-lead">{{ subheading_translated }}</p>
        {% endif %}

        {% assign primary_label_value = section.settings.primary_label %}
        {% if primary_label_value == blank %}{% assign primary_label_value = 'hero.primary_label' | t %}{% endif %}
        {% assign secondary_label_value = section.settings.secondary_label %}
        {% if secondary_label_value == blank %}{% assign secondary_label_value = 'hero.secondary_label' | t %}{% endif %}
        {% if primary_label_value != blank or secondary_label_value != blank %}
        <div class="ios-flex-gap ios-margin-top-sm">
          {% if primary_label_value != blank %}
          <a class="ios-btn primary" href="{{ section.settings.primary_link | default: '#cta' }}">{{ primary_label_value }}</a>
          {% endif %}
          {% if secondary_label_value != blank %}
          <a class="ios-btn ghost" href="{{ section.settings.secondary_link | default: '#how' }}">{{ secondary_label_value }}</a>
          {% endif %}
        </div>
        {% endif %}

        {% assign chip_1_value = section.settings.chip_1 %}
        {% if chip_1_value == blank %}{% assign chip_1_value = 'hero.chip_1' | t %}{% endif %}
        {% assign chip_2_value = section.settings.chip_2 %}
        {% if chip_2_value == blank %}{% assign chip_2_value = 'hero.chip_2' | t %}{% endif %}
        {% assign chip_3_value = section.settings.chip_3 %}
        {% if chip_3_value == blank %}{% assign chip_3_value = 'hero.chip_3' | t %}{% endif %}
        {% if chip_1_value != blank or chip_2_value != blank or chip_3_value != blank %}
        <div class="ios-chips" aria-label="{{ 'hero.important_benefits' | t }}">
          {% if chip_1_value != blank %}
          <div class="ios-chip">‚è±Ô∏è <b>{{ chip_1_value }}</b></div>
          {% endif %}
          {% if chip_2_value != blank %}
          <div class="ios-chip">ü§ù <b>{{ chip_2_value }}</b></div>
          {% endif %}
          {% if chip_3_value != blank %}
          <div class="ios-chip">üí≥ <b>{{ chip_3_value }}</b></div>
          {% endif %}
        </div>
        {% endif %}
      </div>

      <aside class="ios-glass ios-side" aria-label="{{ 'hero.short_and_clear' | t }}">
        <div class="ios-ring" aria-hidden="true"></div>
        <h3>{{ 'hero.short_and_clear' | t }}</h3>

        <div class="ios-stat">
          <div class="ios-stat-row">
            <span>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="opacity: 0.6;">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              {{ 'hero.duration' | t }}
            </span>
            <strong>{{ 'hero.duration_value' | t }}</strong>
          </div>
          <div class="ios-stat-row">
            <span>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="opacity: 0.6;">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                <line x1="12" y1="22.08" x2="12" y2="12"></line>
              </svg>
              {{ 'hero.basis' | t }}
            </span>
            <strong>{{ 'hero.basis_value' | t }}</strong>
          </div>
          <div class="ios-stat-row">
            <span>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="opacity: 0.6;">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="9" y1="3" x2="9" y2="21"></line>
              </svg>
              {{ 'hero.format' | t }}
            </span>
            <strong>{{ 'hero.format_value' | t }}</strong>
          </div>
        </div>
      </aside>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "iOS Hero",
  "settings": [
    { "type": "text", "id": "brand", "label": "Brand" },
    { "type": "text", "id": "tagline", "label": "Tagline" },
    { "type": "text", "id": "kicker", "label": "Kicker" },
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "textarea", "id": "subheading", "label": "Subheading" },

    { "type": "text", "id": "primary_label", "label": "Primary button label" },
    { "type": "text", "id": "primary_link", "label": "Primary button link", "default": "#cta" },
    { "type": "text", "id": "secondary_label", "label": "Secondary button label" },
    { "type": "text", "id": "secondary_link", "label": "Secondary button link", "default": "#how" },

    { "type": "text", "id": "chip_1", "label": "Chip 1" },
    { "type": "text", "id": "chip_2", "label": "Chip 2" },
    { "type": "text", "id": "chip_3", "label": "Chip 3" }
  ],
  "presets": [{ "name": "iOS Hero" }]
}
{% endschema %}

