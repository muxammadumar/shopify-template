<section id="brands" class="ios-section" aria-label="Brands We Have Built">
  <div class="ios-wrap">
    {% render 'ios-section-header', title: section.settings.title, subtitle: section.settings.subtitle %}

    <div class="ios-brands-grid">
      <div class="ios-glass ios-brand-card">
        <video
          class="ios-brand-video"
          src="{{ 'brand-1.MP4' | asset_url }}"
          controls
          playsinline
          aria-label="Brand showcase 1">
        </video>
      </div>

      <div class="ios-glass ios-brand-card">
        <video
          class="ios-brand-video"
          src="{{ 'brand-2.MP4' | asset_url }}"
          controls
          playsinline
          aria-label="Brand showcase 2">
        </video>
      </div>

      <div class="ios-glass ios-brand-card">
        <video
          class="ios-brand-video"
          src="{{ 'brand-3.MP4' | asset_url }}"
          controls
          playsinline
          aria-label="Brand showcase 3">
        </video>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Brands We Have Built",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Brands We Have Built" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "See the success stories of brands we've helped create and grow." }
  ],
  "presets": [{ "name": "Brands We Have Built" }]
}
{% endschema %}
