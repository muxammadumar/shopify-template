<section class="ios-section ios-proof" aria-label="Social Proof">
  <div class="ios-wrap">
    <div class="ios-head">
      <div>
        <h2 class="ios-h2">{{ section.settings.title }}</h2>
        <p class="ios-sub">{{ section.settings.subtitle }}</p>
      </div>
    </div>

    <div class="ios-proof-grid">
      <div class="ios-glass" style="padding:16px">
        <p class="ios-quote">
          <b>{{ section.settings.quote_highlight }}</b> {{ section.settings.quote_rest }}
        </p>

        <div class="ios-divider"></div>

        <div class="ios-logos" aria-label="Badges">
          {% for block in section.blocks %}
            <div class="ios-logo" {{ block.shopify_attributes }}>{{ block.settings.label }}</div>
          {% endfor %}
        </div>
      </div>

      <div class="ios-card" style="padding:16px">
        <h3 style="margin:0 0 8px; font-size:14.5px; font-weight:900">Ergebnisse (typisch)</h3>
        <div class="ios-mini">
          <div class="ios-row"><span>Time-to-launch</span><b>48h</b></div>
          <div class="ios-row"><span>Setup-Komplexit√§t</span><b>Low</b></div>
          <div class="ios-row"><span>Fokus</span><b>Marketing & Conversion</b></div>
        </div>
        <div style="margin-top:12px; color:var(--muted2); font-size:12.5px; line-height:1.7">
          Du kannst die Badges/Claims in Shopify jederzeit anpassen.
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rolex Proof",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Vertrauen & Ergebnisse" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Klarer Fokus: schnell live gehen und direkt testen." },
    { "type": "text", "id": "quote_highlight", "label": "Quote highlight", "default": "Du bekommst nicht nur einen Store," },
    { "type": "textarea", "id": "quote_rest", "label": "Quote rest", "default": "sondern eine startklare Brand-Basis inkl. Struktur, Assets und Next Steps." }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        { "type": "text", "id": "label", "label": "Label", "default": "48h Delivery" }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [{ "name": "Rolex Proof" }]
}
{% endschema %}

