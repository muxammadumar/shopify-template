<section class="ios-section ios-proof" aria-label="Social Proof">
  <div class="ios-wrap">
    {% render 'ios-section-header', title: section.settings.title, subtitle: section.settings.subtitle %}

    <div class="ios-proof-grid">
      <div class="ios-glass ios-padding-card">
        <p class="ios-quote">
          <b>{{ section.settings.quote_highlight }}</b> {{ section.settings.quote_rest }}
        </p>

        <div class="ios-divider"></div>

        <div class="ios-logos" aria-label="Badges">
          {% for block in section.blocks %}
            <div class="ios-logo" {{ block.shopify_attributes }}>{{ block.settings.label }}</div>
          {% endfor %}
        </div>
      </div>

      <div class="ios-card ios-padding-card">
        <h3 style="margin:0 0 8px; font-size:14.5px; font-weight:900">Results (typical)</h3>
        <div class="ios-mini">
          <div class="ios-row"><span>Time-to-launch</span><b>48h</b></div>
          <div class="ios-row"><span>Setup Complexity</span><b>Low</b></div>
          <div class="ios-row"><span>Focus</span><b>Marketing & Conversion</b></div>
        </div>
        <div class="ios-text-hint" style="margin-top:12px">
          You can adjust the badges/claims in Shopify at any time.
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rolex Proof",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Trust & Results" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Clear focus: go live quickly and test directly." },
    { "type": "text", "id": "quote_highlight", "label": "Quote highlight", "default": "You don't just get a store," },
    { "type": "textarea", "id": "quote_rest", "label": "Quote rest", "default": "but a ready-to-launch brand base including structure, assets and next steps." }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        { "type": "text", "id": "label", "label": "Label", "default": "48h Delivery" }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [{ "name": "Rolex Proof" }]
}
{% endschema %}

