<section id="what" class="ios-section" aria-label="Was enthalten ist">
  <div class="ios-wrap">
    <div class="ios-head">
      <div>
        <h2 class="ios-h2">{{ section.settings.title }}</h2>
        <p class="ios-sub">{{ section.settings.subtitle }}</p>
      </div>
    </div>

    <div class="ios-grid2">
      {% for block in section.blocks %}
        <div class="ios-card" style="padding:16px" {{ block.shopify_attributes }}>
          <div class="ios-title-row">
            <h3 style="margin:0; font-size:14.5px; font-weight:800">{{ block.settings.title }}</h3>
            <span class="ios-badge">{{ block.settings.badge }}</span>
          </div>
          <p style="margin:0; color:var(--muted); font-size:13.5px; line-height:1.65">{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "iOS Included",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Was enthalten ist" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Shop, Packaging und Basis-Marketing-Assets – alles in einem." }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Shopify‑Store" },
        { "type": "textarea", "id": "text", "label": "Text", "default": "Responsive Design, Conversion-Struktur und Übergabe der Zugänge." },
        { "type": "text", "id": "badge", "label": "Badge", "default": "Store" }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [{ "name": "iOS Included" }]
}
{% endschema %}

