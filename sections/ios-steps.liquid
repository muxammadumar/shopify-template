<section id="how" class="ios-section" aria-label="How it works">
  <div class="ios-wrap">
    {% render 'ios-section-header', title: section.settings.title, subtitle: section.settings.subtitle %}

    <div class="ios-grid2">
      <div class="ios-card ios-padding-card">
        <div class="ios-steps">
          {% for block in section.blocks %}
            <div class="ios-step" {{ block.shopify_attributes }}>
              <div class="ios-num">{{ forloop.index }}</div>
              <div>
                <h4>{{ block.settings.title }}</h4>
                <p>{{ block.settings.text }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="ios-glass ios-padding-card">
        <h3 class="ios-text-feature-title" style="margin-bottom:8px">Why It Works</h3>
        <p class="ios-text-feature-body">
          You don't lose weeks with design, setup and research. You get a ready foundation and go straight into testing & sales.
        </p>
        <ul class="ios-list">
          <li>No own warehouse & logistics</li>
          <li>Built for quick start</li>
          <li>Support & Onboarding</li>
        </ul>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "iOS Steps",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "How it works" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Step by step from package to first sales." }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Step" },
        { "type": "textarea", "id": "text", "label": "Text", "default": "Step description." }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [{ "name": "iOS Steps" }]
}
{% endschema %}

