<section id="how" class="ios-section" aria-label="So funktioniert’s">
  <div class="ios-wrap">
    {% render 'ios-section-header', title: section.settings.title, subtitle: section.settings.subtitle %}

    <div class="ios-grid2">
      <div class="ios-card ios-padding-card">
        <div class="ios-steps">
          {% for block in section.blocks %}
            <div class="ios-step" {{ block.shopify_attributes }}>
              <div class="ios-num">{{ forloop.index }}</div>
              <div>
                <h4>{{ block.settings.title }}</h4>
                <p>{{ block.settings.text }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="ios-glass ios-padding-card">
        <h3 class="ios-text-feature-title" style="margin-bottom:8px">Warum das funktioniert</h3>
        <p class="ios-text-feature-body">
          Du verlierst keine Wochen mit Design, Setup und Recherche. Du bekommst eine fertige Grundlage und gehst direkt in Test & Sales.
        </p>
        <ul class="ios-list">
          <li>Ohne eigenes Lager & Logistik</li>
          <li>Für schnellen Start gebaut</li>
          <li>Support & Onboarding</li>
        </ul>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "iOS Steps",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "So funktioniert’s" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Schritt für Schritt vom Paket bis zu den ersten Verkäufen." }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Schritt" },
        { "type": "textarea", "id": "text", "label": "Text", "default": "Beschreibung des Schritts." }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [{ "name": "iOS Steps" }]
}
{% endschema %}

