[
  {
    "name": "theme_info",
    "theme_name": "Rolex Dark Glass DE",
    "theme_version": "2.0.0",
    "theme_author": "LaunchHeld",
    "theme_documentation_url": "https://launchheld.com/docs",
    "theme_support_url": "https://launchheld.com/support"
  },
  {
    "name": "Rolex Farbpalette",
    "settings": [
      {
        "type": "header",
        "content": "Rolex-inspirierte Farben"
      },
      {
        "type": "color",
        "id": "rolex_emerald",
        "label": "Rolex Smaragdgrün",
        "default": "#0F5132",
        "info": "Haupt-Akzentfarbe im Rolex-Stil"
      },
      {
        "type": "color",
        "id": "rolex_gold",
        "label": "Rolex Gold",
        "default": "#C9A227",
        "info": "Warme Gold-Akzente"
      },
      {
        "type": "color",
        "id": "rolex_bg",
        "label": "Hintergrundfarbe",
        "default": "#040B07",
        "info": "Dunkler Hintergrund"
      },
      {
        "type": "header",
        "content": "Zusätzliche Farben"
      },
      {
        "type": "color",
        "id": "rolex_text",
        "label": "Textfarbe",
        "default": "#F3F4EF",
        "info": "Helle Textfarbe für dunklen Hintergrund"
      },
      {
        "type": "color",
        "id": "rolex_bg_secondary",
        "label": "Sekundärer Hintergrund",
        "default": "#061A12",
        "info": "Leicht hellerer Hintergrund für Variationen"
      }
    ]
  },
  {
    "name": "Typografie",
    "settings": [
      {
        "type": "header",
        "content": "Schriftarten"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Überschriften-Schriftart",
        "default": "assistant_n4",
        "info": "Wird für H1, H2, H3 verwendet"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Fließtext-Schriftart",
        "default": "assistant_n4",
        "info": "Wird für Absätze und allgemeinen Text verwendet"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "label": "Basis-Schriftgröße",
        "min": 12,
        "max": 18,
        "step": 1,
        "unit": "px",
        "default": 14
      }
    ]
  },
  {
    "name": "Layout & Design",
    "settings": [
      {
        "type": "header",
        "content": "Allgemeine Layout-Einstellungen"
      },
      {
        "type": "range",
        "id": "max_width",
        "label": "Maximale Inhaltsbreite",
        "min": 960,
        "max": 1400,
        "step": 20,
        "unit": "px",
        "default": 1140,
        "info": "Maximale Breite des Inhaltsbereichs"
      },
      {
        "type": "range",
        "id": "border_radius",
        "label": "Eckenradius",
        "min": 0,
        "max": 30,
        "step": 2,
        "unit": "px",
        "default": 18,
        "info": "Rundung für Karten und Buttons"
      },
      {
        "type": "checkbox",
        "id": "enable_glass_effect",
        "label": "Glasmorphismus-Effekt aktivieren",
        "default": true,
        "info": "Verwendet backdrop-filter für durchscheinende Karten"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "header",
        "content": "Website-Icon"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Wird als Browser-Tab-Icon angezeigt. Empfohlen: 32x32px oder 180x180px PNG"
      }
    ]
  },
  {
    "name": "SEO & Metadaten",
    "settings": [
      {
        "type": "header",
        "content": "Suchmaschinenoptimierung"
      },
      {
        "type": "text",
        "id": "meta_title",
        "label": "Standard Meta-Titel",
        "info": "Wird angezeigt, wenn kein spezifischer Titel gesetzt ist"
      },
      {
        "type": "textarea",
        "id": "meta_description",
        "label": "Standard Meta-Beschreibung",
        "info": "Kurze Beschreibung für Suchmaschinen (max. 160 Zeichen)"
      },
      {
        "type": "image_picker",
        "id": "social_image",
        "label": "Social Media Vorschaubild",
        "info": "Bild für Facebook, Twitter, LinkedIn (1200x630px empfohlen)"
      }
    ]
  },
  {
    "name": "DSGVO & Rechtliches",
    "settings": [
      {
        "type": "header",
        "content": "Cookie-Banner & Datenschutz"
      },
      {
        "type": "checkbox",
        "id": "cookie_banner_enabled",
        "label": "Cookie-Banner aktivieren",
        "default": true,
        "info": "Gesetzlich erforderlich für deutsche Websites"
      },
      {
        "type": "text",
        "id": "cookie_banner_text",
        "label": "Cookie-Banner Text",
        "default": "Wir verwenden Cookies, um Ihre Erfahrung zu verbessern und unseren Service zu optimieren."
      },
      {
        "type": "url",
        "id": "privacy_policy_url",
        "label": "Link zur Datenschutzerklärung",
        "default": "/pages/datenschutz"
      },
      {
        "type": "url",
        "id": "imprint_url",
        "label": "Link zum Impressum",
        "default": "/pages/impressum",
        "info": "Impressum ist gesetzlich in Deutschland erforderlich"
      }
    ]
  },
  {
    "name": "Performance",
    "settings": [
      {
        "type": "header",
        "content": "Performance-Optimierung"
      },
      {
        "type": "checkbox",
        "id": "lazy_load_images",
        "label": "Lazy Loading für Bilder",
        "default": true,
        "info": "Lädt Bilder erst, wenn sie sichtbar werden"
      },
      {
        "type": "checkbox",
        "id": "preload_fonts",
        "label": "Schriftarten vorabladen",
        "default": true,
        "info": "Verbessert die Ladezeit der ersten Darstellung"
      }
    ]
  },
  {
    "name": "Erweiterte Einstellungen",
    "settings": [
      {
        "type": "header",
        "content": "Benutzerdefiniertes CSS & JavaScript"
      },
      {
        "type": "html",
        "id": "custom_css",
        "label": "Benutzerdefiniertes CSS",
        "info": "Wird am Ende des <head> eingefügt"
      },
      {
        "type": "html",
        "id": "custom_js",
        "label": "Benutzerdefiniertes JavaScript",
        "info": "Wird vor dem schließenden </body> eingefügt"
      },
      {
        "type": "checkbox",
        "id": "debug_mode",
        "label": "Debug-Modus",
        "default": false,
        "info": "Aktiviert zusätzliche Konsolenausgaben für Entwicklung"
      }
    ]
  }
]
